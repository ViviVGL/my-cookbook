<!DOCTYPE html>
<html>
  <head>
    <title>MyCookbook</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="success"><%= flash[:notice] %></div>
    <% end %>
    <div>
      <%= flash[:message] %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
